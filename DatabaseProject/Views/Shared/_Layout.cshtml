<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" /> 
    </head>
    <body>
        <header>
            <div class="row">
                <div class="span12">
                    <p class="site-title">@Html.ActionLink("CS308 DATABASE PROJECT", "Index", "Home")</p>
                    <div class="row">
                        <div class="span7">
                            <div class="navbar">
                                <div class="navbar-inner">
                                    <div class="container-fluid">
                                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                            <i class="icon-align-justify icon-white"></i>
                                        </a>
                                        <a class="brand" href="http://www.poly.edu">NYU-Poly</a>
                                        <div class="nav-collapse">
                                            <ul class="nav">
                                                <li class="divider-vertical"></li>
                                                <li class="@(ViewBag.Active == "Home" ? "active" : "")">
                                                    <a href="@Url.Action("Index","Home")">
                                                        <i class="icon-home icon-white"></i>
                                                        Home
                                                    </a>
                                                </li>
                                                <li class="divider-vertical"></li>
                                                <li class="@(ViewBag.Active == "Public Posts" ? "active" : "")">
                                                    <a href="@Url.Action("PublicPosts","Home")">
                                                        <i class="icon-globe icon-white"></i>
                                                        Public Posts
                                                    </a>
                                                </li>
                                                <li class="divider-vertical"></li>
                                                <li class="@(ViewBag.Active == "Contact" ? "active" : "")">
                                                    <a href="@Url.Action("Contact","Home")">
                                                        <i class="icon-envelope icon-white"></i>
                                                        Contact
                                                    </a>
                                                </li>
                                                <li class="divider-vertical"></li>
                                                <li class="@(ViewBag.Active == "Content" ? "active" : "")">
                                                    <a href="@Url.Action("Index","ContentItem")">
                                                        <i class="icon-comment icon-white"></i>
                                                        Content
                                                    </a>
                                                </li>                                            
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="span4 offset1"> @*Looks good on a screen smaller than 1920x1080*@
                            <section id="login">
                                @Html.Partial("_LoginPartial")
                            </section>
                        </div>
                    </div>
                 </div>
            </div>
                
        </header>
        <div id="body"> @*THIS IS WHERE OUR WEBSITE WILL BE SHOWN FROM*@
            @RenderSection("featured", required: false)
            <section class="content-wrapper clear-fix"> @*removed 'main-content' because it's not in good taste*@
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="row">
                <div class="span4"> @*Adjust the span according to how long the text below will be*@
                    <p>&copy; @DateTime.Now.Year - Polytechnic Institute of NYU - Introduction to Databases</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap/bootstrap.min.js")" type="text/javascript"></script> 
    </body>
</html>