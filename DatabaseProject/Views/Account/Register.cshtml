@model DatabaseProject.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@using (Html.BeginForm(/*MUST USE ONE OF THE OVERLOADS*/))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <form class="form-horizontal">
        <fieldset>
            <legend>Registration Form</legend>
            <ol>
                <li>
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                </li>
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </li>
            </ol>
            
            @*<input type="submit" value="Register" />*@ @*replaced with below for Bootstrap look*@
            <button class="btn btn-primary btn-large" type="submit">Register</button>
        </fieldset>
    </form>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
