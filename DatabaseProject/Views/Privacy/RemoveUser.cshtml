@model DatabaseProject.Models.PrivacyModel

@{
    ViewBag.Title = "RemoveUser";
    Layout = "~/Views/Shared/_PrivacyLayout.cshtml";
}

@{
    List<SelectListItem> user_lst = new List<SelectListItem>();

    foreach (var x in Model.users)
    {
        user_lst.Add(new SelectListItem() { Text = (x.Value.Key + ", " + x.Value.Value), Value = x.Key.ToString(), Selected = false });   
    }

    SelectList users = new SelectList(user_lst, "Value", "Text");
}

<h3>Please select which user to remove</h3>
@using(Html.BeginForm("RemoveUserFromGroup","Privacy"))
{
    <fiedset>
        <div class="input-append">
            @Html.DropDownListFor(m => m.user, users)           
            <button class="btn" type="submit"><i class="icon-minus"></i>Remove</button>
        </div>
    </fiedset>
}