@model DatabaseProject.Models.PrivacyModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_PrivacyLayout.cshtml";
    //testing
    List<int>numbers = new List<int>();
    List<SelectListItem> choices = new List<SelectListItem>();
    numbers.Add(1);
    numbers.Add(2);
    numbers.Add(3);
    numbers.Add(4);
    numbers.Add(5);
    foreach(int y in numbers)
    {
        choices.Add(new SelectListItem {Text=y.ToString(), Value=y.ToString()});
    }
}

<h3>Select a user you would like to add to one of your groups</h3>
@using(Html.BeginForm("Add","Privacy"))
{
    <fiedset>
        <div class"input-append">
            @Html.DropDownListFor(m => m.group, (IEnumerable<SelectListItem>)choices, "--select a group--")
        </div>
        <div class"input-append">
            @Html.DropDownListFor(m => m.user, (IEnumerable<SelectListItem>)choices, "--select a user--")
        </div>
        <button class="btn" type="submit"><i class="icon-plus"></i>Add</button>
    </fiedset>
}